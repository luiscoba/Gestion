<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/col_White"
    android:gravity="center_vertical"
    app:layout_collapseMode="pin"
    app:layout_scrollFlags="scroll|enterAlways"
    app:theme="@style/Perzonalizado_Toolbar_Theme"
    app:title="@string/app_name">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarManual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/col_White"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txv_evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingRight="18dp"
            android:text="@string/text_evento"
            android:textAllCaps="false"
            android:textColor="@color/col_Black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="550dp"
            tools:layout_editor_absoluteY="23dp" />


    </androidx.appcompat.widget.Toolbar>


</androidx.constraintlayout.widget.ConstraintLayout>

